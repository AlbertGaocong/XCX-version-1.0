/* pages/myself/myself.wxss */

.myself-header-view {
  width: 100%;
  height: 260rpx;
  box-sizing: border-box;
  border: 1rpx solid white;
  text-align: center;
}

.nav-buttonView {
  width: 80rpx;
  height: 30rpx;
  font-size: 20rpx;
  position: absolute;
  top: 20rpx;
  right: 20rpx;
}

.header-image {
  width: 80px;
  height: 80px;
  display: inline-block;
  overflow: hidden;
  border-radius: 80rpx;
  margin-top: 50rpx;
}

.header-nameView {
  width: 80rpx;
  height: 60rpx;
  font-size: 30rpx;
  line-height: 60rpx;
  margin: 0 auto;
}

.mark-contentView {
  width: 100%;
  display: flex;
  flex-direction: row;
  margin-top: 30rpx;
  justify-content: center;
  align-items: center;
  height: 30rpx;
  margin-bottom:10rpx;

}

.mark-imageView {
  width: 20rpx;
  height: 20rpx;
  display: inline-block;
  overflow: hidden;
}

.mark-contentTextView {
  width: 180rpx;
  height: 30rpx;
  font-size: 24rpx;
  display: inline-block;
  margin-left: 10rpx;
  line-height: 30rpx;
  word-break: keep-all; /* 不换行 */
  white-space: nowrap; /* 不换行 */
  overflow: hidden; /* 内容超出宽度时隐藏超出部分的内容 */
  text-overflow: ellipsis; /* 当对象内文本溢出时显示省略标记(...) ；需与overflow:hidden;一起使用。*/
}

.mark-view {
  width: 20rpx;
  height: 30rpx;
  font-size: 24rpx;
  text-align: center;
  line-height: 30rpx;
}

.mark-lineView {
  width: 100%;
  height: 1rpx;
  background-color: #e5e5e5;
  /*margin: 20rpx 20rpx 0 20rpx;*/
}

.totoalMiddleView {
  float: left;
  width: 50%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.middleView {
  width: 30rpx;
  height: 30rpx;
  margin-left: 50%;
}

.middleView0 {
  width: 100rpx;
  height: 100rpx;
  margin-left: 10rpx;
}

.middleView1 {
  width: 100rpx;
  height: 30rpx;
  font-size: 20rpx;
  margin-top: 28rpx;
}

.middleView2 {
  width: 100rpx;
  height: 70rpx;
  font-size: 20rpx;
}

.middleView3 {
  width: 30rpx;
  height: 30rpx;
  display: inline-block;
  overflow: hidden;
}

/*l列表cell*/

.menu-list {
  display: flex;
  width: 100%;
  flex-direction: column;
  background-color: #eee;
  margin-top: 10rpx;
}

.menu-item {
  color: #000;
  display: flex;
  background-color: #fff;
  height: 88rpx;
  border-bottom: 2rpx solid #eee;
  flex-direction: column;
}

.menu-item-group-first {
  margin-top: 10rpx;
}

.menu-item-icon {
  width: 40rpx;
  height: 40rpx;
}

.menu-item-icon-image {
  width: 40rpx;
  height: 40rpx;
}

.menu-item-main {
  display: flex;
  padding: 40rpx;
  border-radius: 10rpx;
  align-items: center;
  font-size: 32rpx;
}

.menu-item-arrow {
  width: 16rpx;
  height: 26rpx;
  float: right;
  /*transition: 400ms;*/
}

